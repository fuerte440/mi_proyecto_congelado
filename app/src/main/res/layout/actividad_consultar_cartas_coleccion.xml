<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Barra superior -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#2488E9"
        android:paddingStart="12dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.25"
            android:scaleType="centerCrop"
            android:src="@drawable/pokeball" />

        <ImageView
            android:layout_width="76dp"
            android:layout_height="70dp"
            android:layout_gravity="start|center_vertical"
            android:contentDescription="Icono App"
            android:src="@mipmap/icono" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/cinzel"
            android:text="POKEXCEL"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </FrameLayout>

    <Spinner
        android:id="@+id/spinner_colecciones"
        android:layout_width="203dp"
        android:layout_height="48dp"
        android:layout_marginTop="76dp"
        android:backgroundTint="#2488E9"
        android:popupBackground="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_listas"
        android:layout_width="208dp"
        android:layout_height="48dp"
        android:layout_marginTop="76dp"
        android:backgroundTint="#2488E9"
        android:popupBackground="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_cartas_coleccion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_volver_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_colecciones"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_volver_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:text="Volver al menÃº principal"
        android:textColor="#FFFFFF"
        android:backgroundTint="#9E9E9E"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
