<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fondo translúcido -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.1"
        android:scaleType="centerCrop"
        android:src="@drawable/pokeball" />
    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <!-- Barra superior -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#2488E9"
            android:paddingStart="12dp"
            android:paddingEnd="16dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.25"
                android:scaleType="centerCrop"
                android:src="@drawable/pokeball" />

            <ImageView
                android:layout_width="76dp"
                android:layout_height="70dp"
                android:layout_gravity="start|center_vertical"
                android:contentDescription="Icono App"
                android:src="@mipmap/icono" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/cinzel"
                android:text="POKEXCEL"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- Título de la sección -->
        <TextView
            android:id="@+id/texto_colecciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="Mi cuenta"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_info_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:text="Nombre de usuario: (Nombre)"
            android:textColor="#C1C1C1"
            android:textSize="17sp"

           />

        <TextView
            android:id="@+id/tv_info_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="12dp"
            android:text="Email de usuario: (email)"
            android:textColor="#C1C1C1"
            android:textSize="17dp"
            android:textStyle="bold" />

        <!-- Campo para editar email -->
        <!-- Botón para guardar cambios -->

        <EditText
            android:id="@+id/editar_email"
            android:layout_width="372dp"
            android:layout_height="72dp"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#2488E9"
            android:drawableStart="@android:drawable/ic_dialog_email"
            android:hint="Nuevo correo electrónico"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:textColorHint="#546E7A" />

        <Button
            android:id="@+id/boton_guardar_email"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="390dp"
            android:backgroundTint="#64B5F6"
            android:minHeight="48dp"
            android:text="Guardar cambios"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />


        <Button
            android:id="@+id/btn_eliminar_cuenta"
            android:layout_width="193dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="80dp"
            android:backgroundTint="#FF5252"
            android:text="Eliminar cuenta"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <!-- Botón para volver -->
        <Button
            android:id="@+id/btn_volver_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#9E9E9E"
            android:padding="12dp"
            android:layout_gravity="center"
            android:text="Volver al menú principal"
            android:textColor="#FFFFFF"
            android:textSize="18sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </LinearLayout>
</FrameLayout>
